Options -Indexes
DirectoryIndex index.php
RewriteEngine On
RewriteBase /institutodona/

# Não reescreve se já estiver em public_html ou se o recurso existir
RewriteCond %{REQUEST_URI} ^/institutodona/public_html/ [OR]
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redireciona tudo da raiz para /public_html
RewriteRule ^(.*)$ public_html/$1 [L]